 <div class="message-card">
      <div class="title xxxlarge-font font-4">{{title}}</div>
      <div class="content font-2">
       {{{label}}}
      
      </div>
 </div>
 
 {{#if choices}}
     <div class="list-options message-options">
       		 <ons-list>
				{{#each choices}}  <!-- iterate over the list elements array and use file node up one notation (../type) to get attributes from the parent-->
				
					{{#ifCond active 1}}
						<ons-list-item tappable class='large-font font-2' name="{{../name}}" onclick="app.message.createMessage('message2','{{value}}')">{{lookup text ../language}}<ons-icon icon="ion-arrow-right-b" class="message-list-icon"></ons-icon></ons-list-item>
					{{/ifCond}}
				 {{/each}}
				 
       		 </ons-list>
       </div>
 {{/if}}
 


